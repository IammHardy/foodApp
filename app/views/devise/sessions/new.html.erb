<div class="auth-container min-h-screen flex items-center justify-center bg-gray-50 p-6">
  <div class="auth-box bg-white rounded-2xl shadow-2xl p-8 w-full max-w-md">
    <h2 class="text-3xl font-extrabold text-center text-red-600 mb-6">Welcome Back ðŸ‘‹</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block font-semibold mb-1 text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-300 focus:outline-none" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block font-semibold mb-1 text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-300 focus:outline-none" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-700" %>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.submit "Log in", class: "w-full bg-red-600 text-white py-3 rounded-lg font-bold hover:bg-red-700 transition" %>
      </div>
    <% end %>

    <div class="text-center mb-4 text-gray-500">Or sign in with</div>

    <!-- OAuth Buttons -->
    <div class="flex flex-col gap-4 mt-6">
      <% if devise_mapping.omniauthable? %>
        <% resource_class.omniauth_providers.each do |provider| %>
          <%= link_to omniauth_authorize_path(resource_name, provider), class: "oauth-btn #{provider.to_s.gsub('_oauth2','')}" do %>
            <% case provider %>
            <% when :google_oauth2 %>
              <i class="fab fa-google mr-2"></i> Sign in with Google
            <% when :facebook %>
              <i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook
            <% when :tiktok %>
              <i class="fab fa-tiktok mr-2"></i> Sign in with TikTok
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <!-- Other Devise Links -->
    <div class="mt-6 text-center text-gray-500 text-sm space-y-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
